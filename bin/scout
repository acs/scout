import logging
import sys

from optparse import OptionParser

from scout.database import Database
from scout.github import Github
from scout.gmane import Gmane
from scout.mail import Mail
from scout.meetup import Meetup
from scout.reddit import Reddit
from scout.stackoverflow import Stackoverflow
from scout.utils import createJSON

def read_options():
    parser = OptionParser(usage="usage: %prog [options]",
                          version="%prog 0.1")
    parser.add_option("--dir",
                      action="store",
                      dest="data_dir",
                      default="irc",
                      help="Directory with all IRC logs")
    parser.add_option("-f", "--file",
                      action="store",
                      dest="events_file",
                      help="File with the events to be loaded")
    parser.add_option("-b", "--backend",
                      action="store",
                      dest="backend",
                      help="Backend to use for the events " +
                            "(stackoverflow, github, ...)")
    parser.add_option("-d", "--database",
                      action="store",
                      dest="dbname",
                      help="Database where information is stored")
    parser.add_option("-u", "--db-user",
                      action="store",
                      dest="dbuser",
                      default="root",
                      help="Database user")
    parser.add_option("-p", "--db-password",
                      action="store",
                      dest="dbpassword",
                      default="",
                      help="Database password")
    parser.add_option("-g", "--debug",
                      action="store_true",
                      dest="debug",
                      default=False,
                      help="Debug mode")
    parser.add_option("-k", "--keyword",
                      action="store",
                      dest="keyword",
                      default="centos",
                      help="keyword to use to search events")
    parser.add_option("--key",
                      action="store",
                      dest="key",
                      help="key to be used with the API")
    parser.add_option("--events",
                      action="store_true",
                      default=False,
                      dest="events",
                      help="generate events")


    (opts, args) = parser.parse_args()

    if len(args) != 0:
        parser.error("Wrong number of arguments")

    if not (opts.dbname and opts.dbuser):
        parser.error("--database --db-user are needed")

    if opts.backend == "meetup" and not opts.key:
        parser.error("meetup backend needs --key with the API key")

    return opts


def get_datasource(backend, db, keyword, key = None):
    ds = None

    if backend == "stackoverflow":
        ds = Stackoverflow(db, keyword)
    elif backend == "github":
        ds = Github(db, keyword)
    elif backend == "mail":
        ds = Mail(db, keyword)
    elif backend == "reddit":
        ds = Reddit(db, keyword)
    elif backend == "gmane":
        ds = Gmane(db, keyword)
    elif backend == "meetup":
        ds = Meetup(db, keyword, key)
    else:
        logging.error(backend, " not supported")
        raise

    return ds

def create_events(backend, db, keyword, key = None):
    config_json = "scout.json"  # File with data sources available and others
    backends = ["stackoverflow", "github", "mail", "reddit", "gmane", "meetup"]
    events = {}

    if backend is not None:
        backends = [backend]

    if backend is not None and backend not in backends:
        logging.error(backend + " not supported")

    for backend in backends:
        events[backend] = get_datasource(backend, db, keyword, key).get_events()

    res = {"events":events,
           "keyword":keyword}

    # Create JSON file with all events
    createJSON(res, keyword+".json")

    # Create a JSON file with event per data source
    for backend in events:
        res = {"events":{backend:events[backend]},
               "keyword":keyword}
        createJSON(res, keyword+"-"+backend+".json")

    # Create JSON file with backends available and other config info
    res = {"backends":backends,
           "keyword":keyword}
    createJSON(res, config_json)

def create_tables(backend, db, keyword):
    return get_datasource(backend, db, keyword).create_tables()

if __name__ == '__main__':
    logging.basicConfig(level=logging.INFO, format='%(asctime)s %(message)s')

    opts = read_options()
    db = Database(opts.dbuser, opts.dbpassword, opts.dbname)
    db.open_database()

    if opts.events:
        create_events(opts.backend, db, opts.keyword, opts.key)
    else:
        create_tables(opts.backend, db, opts.keyword)
        ds = get_datasource(opts.backend, db, opts.keyword, opts.key)
        ds.download_events(opts.events_file)

    db.close_database()
    sys.exit(0)
